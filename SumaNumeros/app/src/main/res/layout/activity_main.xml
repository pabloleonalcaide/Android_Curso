<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pablo.sumanumeros.MainActivity">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Numero 1"
        android:layout_below="@id/resultView"
        android:textSize="24sp"
        android:id="@+id/text1"
        />
    <EditText
        android:id="@+id/edit1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"
        android:width="200dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Numero 2"
        android:textSize="24sp"
        android:id="@+id/text2"
        android:layout_below="@id/edit1"
        />
    <EditText
        android:id="@+id/edit2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text2"
        android:width="200dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resultado"
        android:textSize="24sp"
        android:id="@+id/resultado"
        android:layout_alignParentTop="true"

        />
    <TextView
        android:id="@+id/resultView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resultado"
        android:width="200dp"
        android:height="30dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:text="sumar"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSuma"
        android:textSize="14dp"
        android:layout_below="@+id/edit2"/>
    <Button
        android:layout_width="wrap_content"
        android:text="restar"
        android:layout_height="wrap_content"
        android:id="@+id/buttonResta"
        android:layout_below="@id/edit2"
        android:textSize="14dp"
        android:layout_toRightOf="@+id/buttonSuma"/>
    <Button
        android:layout_width="wrap_content"
        android:text="multiplicar"
        android:layout_height="wrap_content"
        android:id="@+id/buttonDivision"
        android:layout_below="@id/edit2"
        android:textSize="14dp"
        android:layout_toRightOf="@+id/buttonResta"/>
    <Button
        android:layout_width="wrap_content"
        android:text="dividir"
        android:layout_height="wrap_content"
        android:id="@+id/buttonMultiplicar"
        android:layout_below="@id/edit2"
        android:textSize="14dp"
        android:layout_toRightOf="@+id/buttonDivision"/>
</RelativeLayout>
</android.support.constraint.ConstraintLayout>
