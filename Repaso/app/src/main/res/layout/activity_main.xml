<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pablo.repaso.MainActivity">
<RelativeLayout
    android:layout_width="368dp"
    android:layout_height="495dp"
    tools:layout_editor_absoluteX="8dp"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="8dp">
    <TextView

        android:id="@+id/texto"
        android:layout_width="73dp"
        android:layout_height="40dp"
        android:text="TextView"
        tools:layout_editor_absoluteX="154dp"
        tools:layout_editor_absoluteY="61dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

    <Button
        android:layout_above="@id/texto"
        android:id="@+id/incrementa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="incrementa"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="295dp"
        android:layout_alignParentTop="true" />


    <Button
        android:layout_above="@id/incrementa"
        android:id="@+id/resetea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="resetea"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="500dp"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/decrementa"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/decrementa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="decrementa"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="133dp"
        android:layout_marginTop="67dp"
        android:layout_below="@+id/texto"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
</android.support.constraint.ConstraintLayout>
