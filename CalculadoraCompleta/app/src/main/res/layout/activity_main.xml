<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2222"
    tools:context="com.example.pablo.calculadoracompleta.MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/resultado"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="0"
            android:textSize="40sp"
            android:background="#fff"
            android:layout_marginBottom="50dp"/>
        <Button
            android:id="@+id/buton7"
            android:layout_below="@+id/resultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="7"/>
        <Button
            android:id="@+id/buton8"
            android:layout_below="@+id/resultado"
            android:layout_toRightOf="@+id/buton7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="8"/>
        <Button
            android:id="@+id/buton9"
            android:layout_below="@+id/resultado"
            android:layout_toRightOf="@+id/buton8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="9"/>

        <Button
            android:id="@+id/buton4"
            android:layout_below="@+id/buton7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="4"/>
        <Button
            android:id="@+id/buton5"
            android:layout_below="@+id/buton7"
            android:layout_toRightOf="@+id/buton7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="5"/>
        <Button
            android:id="@+id/buton6"
            android:layout_below="@+id/buton7"
            android:layout_toRightOf="@+id/buton8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="6"/>
        <Button
            android:id="@+id/buton1"
            android:layout_below="@+id/buton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="1"/>
        <Button
            android:id="@+id/buton2"
            android:layout_below="@+id/buton4"
            android:layout_toRightOf="@+id/buton7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="2"/>
        <Button
            android:id="@+id/buton3"
            android:layout_below="@+id/buton4"
            android:layout_toRightOf="@+id/buton8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="3"/>

        <!--BOTONES DE OPERACIONES MATEMATICAS y 0-->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Suma"
            android:layout_below="@+id/resultado"
            android:layout_toRightOf="@+id/buton9"
            android:text="+"
            android:textSize="30sp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Resta"
            android:layout_below="@+id/Suma"
            android:layout_toRightOf="@+id/buton6"
            android:text="-"
            android:textSize="30sp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Multiplica"
            android:layout_below="@+id/Resta"
            android:layout_toRightOf="@+id/buton3"
            android:text="*"
            android:textSize="30sp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Divide"
            android:layout_below="@+id/Multiplica"
            android:layout_toRightOf="@+id/buton3"
            android:text="/"
            android:textSize="30sp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/decimal"
            android:text="."
            android:textSize="30sp"
            android:layout_below="@+id/buton1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buton0"
            android:text="0"
            android:textSize="30sp"
            android:layout_toRightOf="@+id/decimal"
            android:layout_below="@+id/buton1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/igual"
            android:text="="
            android:textSize="30sp"
            android:layout_below="@+id/buton1"
            android:layout_toRightOf="@+id/buton0"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reset"
            android:layout_below="@+id/Divide"
            android:layout_toRightOf="@+id/buton3"
            android:text="C"
            android:textSize="30sp"/>
   <!--     <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/posNeg"
            android:layout_below="@+id/igual"
            android:layout_toRightOf="@+id/buton0"
            android:text="+/-"
            android:textSize="30sp"/>  -->
        <TextView
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/texto"
            android:textSize="30sp"
            android:fontFamily="casual"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="CALCULADORA "
            android:layout_below="@+id/reset"/>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
